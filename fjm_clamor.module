 */
function template_preprocess_fjm_clamor_concert(&$vars) {
  global $base_url;
  $pid = $vars['pid'];
  //$concert = array();
  
  module_load_include('inc', 'islandora_solr_search', 'IslandoraSolrQueryProcessor');
